<nav class="navbar navbar-light bg-light px-5">
  <a class="navbar-brand">Simple AirBnb</a>
  <form class="form-inline">
    <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-success my-2 my-sm-0" %>
  </form>
</nav>
  <div class="row m-4">
      <% @flats.each do |flat| %>
        <div class="col-3 m-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-subtitle"><%= flat.address %></p>
              <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
              <i class="fa-solid fa-people-group">   <%= flat.number_of_guests %>       |</i>
              <i class="fa-solid fa-sterling-sign ml-2">   <%= flat.price_per_night %></i>
            </div>
            <div class="container">
              <div class="row">
                <div class="col-3">
                <%= link_to "More", flat_path(flat), class: "btn btn-success mb-2" %>
                </div>
                <div class="col-3">
                <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-primary mb-2" %>
                </div>
                <div class="col-3">
                <%= link_to "Delete",flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger mb-2" %>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
