<nav class="navbar navbar-light bg-light px-5">
  <a class="navbar-brand">Simple AirBnb</a>
  <form class="form-inline">
    <%= link_to "Home", flats_path, class: "btn btn-outline-success my-2 my-sm-0" %>
  </form>
</nav>
<div class="img-fluid w-100 mb-3 position-absolute" style="background-image">
  <img src="https://images.unsplash.com/photo-1453928582365-b6ad33cbcf64?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OXx8YmFja2dyb3VuZCUyMGNvbXB1dGVyfGVufDB8fDB8fHww&auto=format&fit=crop&w=800&q=60" class="card-img-top" alt="...">
</div>
<div>
  <div class="col-sm-6 m-4 ">
      <div class="card bg-light">
        <div class="card-body">
          <h5 class="card-title"><%= @flat.name %></h5>
          <p class="card-text"><%= @flat.address %></p>
        </div>
      </div>
  </div>
  <div class="col-sm-6 m-4 ">
      <div class="card bg-light">
        <div class="card-body">
          <h5 class="card-title">A bit more about this flat...</h5>
          <p class="card-text"><%= @flat.description %></p>
        </div>
      </div>
  </div>
  <div class="col-sm-6 m-4 ">
      <div class="card bg-light">
        <div class="card-body">
          <h5 class="card-title">Details</h5>
          <div class="row">
            <div class="col-1">
            <i class="fa-solid fa-people-group">   <%= @flat.number_of_guests %></i>
            </div>
            <div class="col-2">
            <i class="fa-solid fa-sterling-sign ml-2">   <%= @flat.price_per_night %></i>
            </div>
          </div>
        </div>
      </div>
  </div>
  <div class="container w-25">
      <form class="position-relative">
      <div class="mb-3 col-sm-3">
        <label for="exampleInputEmail1" class="form-label">Start date</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">End Date</label>
        <input type="password" class="form-control" id="exampleInputStartDate1">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
