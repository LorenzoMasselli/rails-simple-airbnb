<nav class="navbar navbar-light bg-light px-5">
  <a class="navbar-brand">Simple AirBnb</a>
  <form class="form-inline">
    <%= link_to "Home", flats_path, class: "btn btn-outline-success my-2 my-sm-0" %>
  </form>
</nav>
<div class="text-center">
  <h1>Edit the flat</h1>
</div>
<div class="container w-50">
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.submit %>
  <% end %>
</div>
